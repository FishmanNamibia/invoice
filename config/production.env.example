# Production Environment Configuration
# Copy this to .env and update with your production values

# ============================================
# Environment
# ============================================
NODE_ENV=production
PORT=5001

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=financials_db
DB_USER=financials_user
DB_PASSWORD=your_secure_database_password_here

# Database Connection Pool (optional, for performance)
DB_POOL_MIN=5
DB_POOL_MAX=30
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# SSL Configuration (set to false for local PostgreSQL)
DB_SSL=false

# ============================================
# Security
# ============================================
# Generate with: openssl rand -base64 64
JWT_SECRET=your_very_secure_jwt_secret_key_minimum_32_characters_long

# Generate with: openssl rand -hex 32
SESSION_SECRET=your_session_secret_key_here

# ============================================
# Email Configuration (SMTP)
# ============================================
# Based on your production setup
SMTP_HOST=mail.dynaverseinvestment.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=info@dynaverseinvestment.com
SMTP_PASSWORD=your_email_password_here

# Admin Email (for system notifications)
ADMIN_EMAIL=info@dynaverseinvestment.com

# ============================================
# Application URLs
# ============================================
# Your production domain
FRONTEND_URL=https://invoice.dynaverseinvestment.com

# CORS Origins (comma-separated, no spaces)
CORS_ORIGINS=https://invoice.dynaverseinvestment.com,http://invoice.dynaverseinvestment.com

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Webhook Configuration (for GitHub auto-deploy)
# ============================================
# Generate with: openssl rand -hex 32
WEBHOOK_SECRET=your_webhook_secret_here

# ============================================
# Logging (optional)
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ============================================
# File Upload (optional)
# ============================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads


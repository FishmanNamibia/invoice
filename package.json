{
  "name": "financials-system",
  "version": "1.0.0",
  "description": "Multi-tenant Financial Management System with Invoicing, Quotes, and Bookkeeping",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "NODE_ENV=production node server/index.js",
    "init-db": "node server/database/init.js",
    "create-admin": "node server/database/create_system_admin.js",
    "migrate-admin": "node -e \"require('./server/database/init.js'); require('./server/database/create_system_admin.js')\"",
    "migrate-monitoring": "node server/database/run_monitoring_migration.js",
    "production": "NODE_ENV=production npm run build && npm start",
    "pm2:start": "pm2 start server/index.js --name financials --env production",
    "pm2:stop": "pm2 stop financials",
    "pm2:restart": "pm2 restart financials",
    "pm2:logs": "pm2 logs financials",
    "pm2:monit": "pm2 monit",
    "backup-db": "pg_dump -U financials_user financials_db | gzip > backup_$(date +%Y%m%d_%H%M%S).sql.gz",
    "test": "echo \"Tests coming soon\" && exit 0",
    "lint": "echo \"Linting coming soon\" && exit 0"
  },
  "keywords": [
    "invoicing",
    "bookkeeping",
    "financial",
    "multi-tenant"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "pdfkit": "^0.13.0",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
